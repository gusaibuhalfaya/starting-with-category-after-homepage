<section id="content-details" class="row clearfix">
  <article id="details-article" class="col-sm-8">
    <h1 id="article-title">Look at our animals!</h1>
  </article>
</section>

<section id="products">
<% @products.each do |product| %>
 <div class="product clearfix">
   <a href="<%= product_path(product) %>">
    <div class="product-image-container">
     <img src="<%= product.download_url %>"  alt="<%= product.title %>"/>
     <span class="product-price">$<%= product.price %></span>
   </div>
   <p class="product-title"><%= product.title %></p></a>
 </div>
 <% end %>
</section>